<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
    <variable
        name="addEventModel"
        type="com.tecOps.workflow.viewModel.AddEventViewModel" />

</data>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingBottom="50dp"
            android:background="@drawable/background">

            <TextView
                android:id="@+id/title_addEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Add Event"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_addEvent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingTop="20dp"
                android:paddingRight="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppinsregular"
                    android:maxLines="1"
                    android:text="Event Name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_eventName"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edit_text"
                        android:fontFamily="@font/poppinsmedium"
                        android:hint="Event Name"
                        android:inputType="text"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@={addEventModel.EventName}"
                        android:textColor="@color/colorTextinput"
                        android:textColorHint="@color/colorTextinput"

                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppinsregular"
                    android:maxLines="1"
                    android:text="Date"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_EventDate"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edit_text"
                        android:focusable="false"
                        android:fontFamily="@font/poppinsmedium"
                        android:hint="Event Date"
                        android:inputType="date"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@={addEventModel.EventDate}"
                        android:textColor="@color/colorTextinput"
                        android:textColorHint="@color/colorTextinput"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppinsregular"
                    android:maxLines="1"
                    android:text="Time"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TableRow>

                        <android.support.design.widget.TextInputLayout
                            android:gravity="left"
                            android:id="@+id/input_eventTimefromlay"
                            android:layout_weight="1"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            app:hintEnabled="false">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/input_eventTimefrom"
                                android:layout_width="150dp"
                                android:layout_height="45dp"
                                android:background="@drawable/edit_text"
                                android:fontFamily="@font/poppinsmedium"
                                android:hint="From"
                                android:inputType="time"
                                android:focusable="false"
                                android:paddingLeft="10dip"
                                android:paddingRight="10dip"
                                android:text="@={addEventModel.EventStartTime}"
                                android:textColor="@color/colorTextinput"
                                android:textColorHint="@color/colorTextinput"
                                android:textSize="15sp" />

                        </android.support.design.widget.TextInputLayout>


                        <android.support.design.widget.TextInputLayout
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/input_eventTimefromlay"
                            android:layout_alignParentTop="true"
                            android:clickable="true"
                            app:hintEnabled="false">

                            <android.support.design.widget.TextInputEditText
                                android:id="@+id/input_eventTimeto"
                                android:layout_width="150dp"
                                android:layout_height="45dp"
                                android:background="@drawable/edit_text"
                                android:fontFamily="@font/poppinsmedium"
                                android:hint="To"
                                android:focusable="false"
                                android:inputType="time"
                                android:paddingLeft="10dip"
                                android:paddingRight="10dip"
                                android:text="@={addEventModel.EventEndTime}"
                                android:textColor="@color/colorTextinput"
                                android:textColorHint="@color/colorTextinput"
                                android:textSize="15sp" />

                        </android.support.design.widget.TextInputLayout>
                    </TableRow>
                </TableLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppinsregular"
                    android:maxLines="1"
                    android:text="Location"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">


                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_eventLocation"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edit_text"
                        android:fontFamily="@font/poppinsmedium"
                        android:hint="Event Location"
                        android:inputType="text"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@={addEventModel.EventLocation}"
                        android:textColor="@color/colorTextinput"
                        android:textColorHint="@color/colorTextinput"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppinsregular"
                    android:maxLines="1"
                    android:text="Participants"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_eventParticipants"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edit_text"
                        android:fontFamily="@font/poppinsmedium"
                        android:hint="Event Participants"
                        android:inputType="text"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@={addEventModel.EventParticipants}"
                        android:textColor="@color/colorTextinput"
                        android:textColorHint="@color/colorTextinput"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppinsregular"
                    android:maxLines="1"
                    android:text="Batch"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_eventBatch"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edit_text"
                        android:fontFamily="@font/poppinsmedium"
                        android:hint="Batch"
                        android:inputType="number"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@={addEventModel.EventBatch}"
                        android:textColor="@color/colorTextinput"
                        android:textColorHint="@color/colorTextinput"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppinsregular"
                    android:maxLines="1"
                    android:text="Budget"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_eventBudget"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edit_text"
                        android:fontFamily="@font/poppinsmedium"
                        android:hint="Budget"
                        android:inputType="number"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@={addEventModel.EventBudget}"
                        android:textColor="@color/colorTextinput"
                        android:textColorHint="@color/colorTextinput"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppinsregular"
                    android:maxLines="1"
                    android:text="Description"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_eventDescription"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/edit_text"
                        android:fontFamily="@font/poppinsmedium"
                        android:gravity="top|left"
                        android:hint="Description"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:maxLines="10"
                        android:minLines="6"
                        android:paddingTop="5dp"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:scrollbars="vertical"
                        android:text="@={addEventModel.EventDescription}"
                        android:textColor="@color/colorTextinput"
                        android:textColorHint="@color/colorTextinput"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="2dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/poppinsregular"
                    android:maxLines="1"
                    android:text="Coordinators"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_eventCoordinator1"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edit_text"
                        android:fontFamily="@font/poppinsmedium"
                        android:hint="Coordinator 01"
                        android:inputType="text"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@={addEventModel.EventCoordinator1}"
                        android:textColor="@color/colorTextinput"
                        android:textColorHint="@color/colorTextinput"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_eventCoordinator1StuNo"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edit_text"
                        android:fontFamily="@font/poppinsmedium"
                        android:hint="Student Number"
                        android:inputType="text"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@={addEventModel.EventCoordinator1StuNo}"
                        android:textColor="@color/colorTextinput"
                        android:textColorHint="@color/colorTextinput"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_eventCoordinator2"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edit_text"
                        android:fontFamily="@font/poppinsmedium"
                        android:hint="Coordinator 02"
                        android:inputType="text"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@={addEventModel.EventCoordinator2}"
                        android:textColor="@color/colorTextinput"
                        android:textColorHint="@color/colorTextinput"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/input_eventCoordinator2StuNo"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:background="@drawable/edit_text"
                        android:fontFamily="@font/poppinsmedium"
                        android:hint="Student Number"
                        android:inputType="text"
                        android:paddingLeft="10dip"
                        android:paddingRight="10dip"
                        android:text="@={addEventModel.EventCoordinator2StuNo}"
                        android:textColor="@color/colorTextinput"
                        android:textColorHint="@color/colorTextinput"
                        android:textSize="15sp" />

                </android.support.design.widget.TextInputLayout>
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/btn_saveEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppinsbold"
                    android:background="@drawable/repple_effect_login"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"
                    android:padding="12dp"
                    android:onClick="@{(v) -> addEventModel.onClickSave(v)}"/>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</layout>