<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="eventModel"
            type="com.tecOps.workflow.model.EventModel" />


    </data>


<android.support.v4.widget.DrawerLayout

    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <android.support.design.widget.CoordinatorLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           tools:context=".view.EventDetails">

           <android.support.design.widget.AppBarLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:theme="@style/AppTheme.AppBarOverlay">
               <android.support.v7.widget.Toolbar
                   android:id="@+id/toolbar"
                   android:layout_width="match_parent"
                   android:layout_height="?attr/actionBarSize"
                   android:background="?attr/colorPrimary"
                   app:popupTheme="@style/AppTheme.PopupOverlay" />
           </android.support.design.widget.AppBarLayout>

           <FrameLayout
               android:id="@+id/fragment_container"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <com.sothree.slidinguppanel.SlidingUpPanelLayout
               xmlns:android="http://schemas.android.com/apk/res/android"
               xmlns:tools="http://schemas.android.com/tools"
               xmlns:app="http://schemas.android.com/apk/res-auto"
               android:id="@+id/sliding_layout"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/background"
               app:layout_behavior="@string/appbar_scrolling_view_behavior"
               tools:context=".view.EventDetails"
               android:gravity="bottom"
               app:umanoPanelHeight="48dp"
               app:umanoShadowHeight="5dp"
              >


               <android.support.constraint.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   tools:context=".view.event_details"
                   tools:layout_editor_absoluteX="0dp"
                   tools:layout_editor_absoluteY="0dp">

                   <LinearLayout
                       android:layout_width="fill_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       tools:ignore="MissingConstraints">

                       <RelativeLayout
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="20dp"
                           android:layout_marginTop="20dp"
                           android:layout_marginRight="20dp"
                           android:layout_marginBottom="10dp"
                           android:layout_weight="11"
                           android:background="#9AFFFFFF"
                           android:paddingLeft="10dp"
                           android:paddingRight="10dp"
                           android:paddingBottom="10dp">

                           <ScrollView
                               android:id="@+id/sc"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent">

                               <android.support.constraint.ConstraintLayout
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

                                   <ImageView
                                       android:id="@+id/tickIcon"
                                       android:layout_width="60dp"
                                       android:layout_height="0dp"
                                       android:layout_marginTop="10dp"
                                       android:layout_marginBottom="16dp"
                                       app:layout_constraintBottom_toTopOf="@+id/divider"
                                       app:layout_constraintEnd_toStartOf="@+id/txtEventtitle"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintVertical_bias="0.52"
                                       app:srcCompat="@drawable/tick" />

                                   <TextView
                                       android:fontFamily="@font/poppinsmedium"
                                       android:id="@+id/txtEventtitle"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_marginTop="10dp"
                                       android:text="@{eventModel.eventName}"
                                       android:textAlignment="viewStart"
                                       android:textSize="24sp"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toEndOf="@+id/tickIcon"
                                       app:layout_constraintTop_toTopOf="parent" />

                                   <TextView
                                       android:fontFamily="@font/poppinsmedium"
                                       android:id="@+id/txtDateTimeVenue"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_marginStart="8dp"
                                       android:layout_marginEnd="8dp"
                                       android:text="@{eventModel.eventlocationdate}"
                                       android:textAlignment="viewStart"
                                       android:textSize="12sp"
                                       app:layout_constraintBottom_toBottomOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toEndOf="@+id/tickIcon"
                                       app:layout_constraintTop_toBottomOf="@+id/txtEventtitle"
                                       app:layout_constraintVertical_bias="0.0" />

                                   <View
                                       android:id="@+id/divider"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_marginStart="8dp"
                                       android:layout_marginTop="16dp"
                                       android:layout_marginEnd="8dp"
                                       android:background="?android:attr/listDivider"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toBottomOf="@+id/txtEventtitle" />

                                   <TextView
                                       android:id="@+id/txtOrganize"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_marginTop="12dp"
                                       android:layout_marginBottom="9dp"
                                       android:text="Organized By "
                                       android:textColor="@color/colorPrimary"
                                       android:textSize="12sp"
                                       android:textStyle="bold"
                                       app:layout_constraintBottom_toTopOf="@+id/txtCordinators"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toBottomOf="@+id/txtDateTimeVenue" />

                                   <TextView
                                       android:id="@+id/txtCordinators"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_marginTop="8dp"
                                       android:layout_marginBottom="8dp"
                                       android:text="Co ordinators"
                                       android:textColor="@color/colorPrimary"
                                       android:textSize="12sp"
                                       android:textStyle="bold"
                                       app:layout_constraintBottom_toTopOf="@+id/txtParticipants"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toBottomOf="@+id/txtOrganizeData" />

                                   <TextView
                                       android:id="@+id/txtParticipants"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_marginTop="8dp"
                                       android:layout_marginBottom="26dp"
                                       android:text="Prticipants"
                                       android:textColor="@color/colorPrimary"
                                       android:textSize="12sp"
                                       android:textStyle="bold"
                                       app:layout_constraintBottom_toTopOf="@+id/txtDescription"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toBottomOf="@+id/txtCordinatorsData" />

                                   <TextView
                                       android:id="@+id/txtDescription"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_marginTop="24dp"
                                       android:layout_marginBottom="8dp"
                                       android:text="Description--"
                                       android:textColor="@color/colorPrimary"
                                       android:textSize="12sp"
                                       android:textStyle="bold"
                                       app:layout_constraintBottom_toTopOf="@+id/txtDescriptionData"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toBottomOf="@+id/txtParticipantsData" />

                                   <TextView
                                       android:id="@+id/txtApprovedBy"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_marginBottom="8dp"
                                       android:text="Approved By--"
                                       android:textColor="@color/colorPrimary"
                                       android:textSize="12sp"
                                       android:textStyle="bold"
                                       app:layout_constraintBottom_toTopOf="@+id/userIconLarge"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toBottomOf="@+id/txtDescriptionData" />

                                   <TextView
                                       android:fontFamily="@font/poppinsmedium"
                                       android:id="@+id/txtOrganizeData"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_marginStart="8dp"
                                       android:layout_marginTop="12dp"
                                       android:text="@{eventModel.eventDate}"
                                       android:textSize="12sp"
                                       android:textStyle="bold"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintHorizontal_bias="0.081"
                                       app:layout_constraintStart_toEndOf="@+id/txtOrganize"
                                       app:layout_constraintTop_toBottomOf="@+id/divider" />

                                   <TextView
                                       android:id="@+id/txtCordinatorsData"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_marginTop="12dp"
                                       android:text="jhvskjxh"
                                       android:textSize="12sp"
                                       android:textStyle="bold"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintHorizontal_bias="0.139"
                                       app:layout_constraintStart_toEndOf="@+id/txtCordinators"
                                       app:layout_constraintTop_toBottomOf="@+id/txtOrganizeData" />

                                   <TextView
                                       android:fontFamily="@font/poppinsmedium"
                                       android:id="@+id/txtParticipantsData"
                                       android:layout_width="wrap_content"

                                       android:layout_height="wrap_content"
                                       android:layout_marginTop="8dp"
                                       android:text="@{eventModel.eventParticipants}"
                                       android:textSize="12sp"
                                       android:textStyle="bold"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintHorizontal_bias="0.211"
                                       app:layout_constraintStart_toEndOf="@+id/txtParticipants"
                                       app:layout_constraintTop_toBottomOf="@+id/txtCordinatorsData" />

                                   <TextView
                                       android:id="@+id/txtApprovedName"
                                       android:layout_width="wrap_content"
                                       android:layout_height="18dp"
                                       android:layout_marginTop="16dp"
                                       android:text="Ruwan Wicramarachchi"
                                       android:textSize="14sp"
                                       app:layout_constraintBottom_toTopOf="@+id/txtApprovedPosition"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintHorizontal_bias="0.13"
                                       app:layout_constraintStart_toEndOf="@+id/userIconLarge"
                                       app:layout_constraintTop_toBottomOf="@+id/txtApprovedBy" />

                                   <TextView
                                       android:id="@+id/txtApprovedPosition"
                                       android:layout_width="wrap_content"
                                       android:layout_height="18dp"
                                       android:text="HOD"
                                       android:textSize="12sp"
                                       android:textStyle="bold"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintHorizontal_bias="0.08"
                                       app:layout_constraintStart_toEndOf="@+id/userIconLarge"
                                       app:layout_constraintTop_toBottomOf="@+id/txtApprovedName" />

                                   <TextView
                                       android:id="@+id/txtDescriptionData"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_marginBottom="10dp"
                                       android:textAlignment="viewStart"
                                       android:fontFamily="@font/poppinsmedium"
                                       android:textSize="12sp"
                                       android:text="@{eventModel.eventDescription}"
                                       android:textStyle="bold"
                                       app:layout_constraintBottom_toTopOf="@+id/txtApprovedBy"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toBottomOf="@+id/txtDescription" />

                                   <ImageView
                                       android:id="@+id/userIconLarge"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:layout_marginTop="8dp"
                                       android:layout_marginEnd="8dp"
                                       android:background="@color/colorWhite"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintHorizontal_bias="0.028"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toBottomOf="@+id/txtApprovedBy"
                                       android:src="@drawable/user_icon_sample" />

                               </android.support.constraint.ConstraintLayout>


                           </ScrollView>

                           <android.support.design.widget.FloatingActionButton

                               android:id="@+id/fab"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_alignEnd="@+id/sc"
                               android:layout_alignBottom="@+id/sc"
                               android:layout_marginEnd="9dp"
                               android:layout_marginBottom="10dp"
                               app:backgroundTint="@color/colorWhite"
                               app:srcCompat="@drawable/chat" />

                       </RelativeLayout>



                   </LinearLayout>
               </android.support.constraint.ConstraintLayout>

               <RelativeLayout
                   android:id="@+id/upCalender"
                   android:background="@color/colorWhite"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <RelativeLayout

                       android:layout_height="match_parent"
                       android:layout_width="match_parent">
                       <android.support.v7.widget.AppCompatButton
                           android:id="@+id/btnCalendar"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:background="@color/colorPrimary"
                           android:fontFamily="@font/poppinsbold"
                           android:text="@string/calendar"
                           android:textAllCaps="false"
                           android:textColor="@color/colorWhite"
                           android:textSize="15sp"
                           android:textStyle="bold" />

                       <ScrollView

                           android:id="@+id/scrollviewcalender"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_below="@+id/btnCalendar"
                           android:layout_marginTop="0dp">

                           <LinearLayout
                               android:id="@+id/innerrelative"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:orientation="vertical">

                               <RelativeLayout
                                   android:id="@+id/red"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

                                   <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:orientation="horizontal"
                                       android:weightSum="5">

                                       <TextView

                                           android:id="@+id/year"
                                           android:layout_width="40dp"
                                           android:layout_height="40dp"
                                           android:layout_marginLeft="30dp"
                                           android:layout_marginTop="20dp"
                                           android:layout_weight="1"
                                           android:background="@drawable/years_months"
                                           android:padding="10dp"
                                           android:text="@{eventModel.textYear}" />

                                       <LinearLayout
                                           android:layout_marginTop="20dp"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:orientation="vertical">

                                           <Button

                                               android:paddingTop="5dp"
                                               android:onClick="@{()->eventModel.onYearincrease(year.getText().toString())}"
                                               android:drawableTop="@android:drawable/arrow_up_float"
                                               android:layout_width="30dp"
                                               android:layout_height="20dp"
                                               android:background="@drawable/up_down_animation"/>

                                           <Button
                                               android:onClick="@{()->eventModel.onYeardecrease(year.getText().toString())}"
                                               android:drawableBottom="@android:drawable/arrow_down_float"
                                               android:textColor="#ff0000"
                                               android:background="@drawable/up_down_animation"
                                               android:paddingBottom="5dp"
                                               android:layout_width="30dp"
                                               android:layout_height="20dp"
                                               />

                                       </LinearLayout>

                                       <FrameLayout
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:layout_weight="3">

                                       </FrameLayout>

                                       <TextView
                                           android:id="@+id/month"
                                           android:layout_width="80dp"
                                           android:layout_height="40dp"
                                           android:layout_marginTop="20dp"
                                           android:text="@{eventModel.textMonth}"
                                           android:layout_weight="1"
                                           android:background="@drawable/years_months"
                                           android:padding="10dp"
                                           />
                                       <LinearLayout
                                           android:layout_marginRight="30dp"
                                           android:layout_marginTop="20dp"
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:orientation="vertical">

                                           <Button
                                               android:onClick="@{()->eventModel.onMonthincrease(month.getText().toString())}"
                                               android:background="@drawable/up_down_animation"
                                               android:paddingTop="5dp"
                                               android:drawableTop="@android:drawable/arrow_up_float"
                                               android:layout_width="30dp"
                                               android:layout_height="20dp"
                                               />

                                           <Button
                                               android:onClick="@{()->eventModel.onMonthdecrease(month.getText().toString())}"
                                               android:drawableBottom="@android:drawable/arrow_down_float"
                                               android:background="@drawable/up_down_animation"
                                               android:paddingBottom="5dp"
                                               android:layout_width="30dp"
                                               android:layout_height="20dp"
                                               />

                                       </LinearLayout>
                                   </LinearLayout>
                               </RelativeLayout>

                               <com.applandeo.materialcalendarview.CalendarView
                                   android:id="@+id/calendarView"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:layout_alignParentStart="true"
                                   android:layout_alignParentEnd="true"
                                   android:layout_alignParentBottom="true"
                                   android:layout_marginLeft="30dp"
                                   android:layout_marginTop="20dp"
                                   android:layout_marginRight="30dp"
                                   android:layout_marginBottom="20dp"
                                   android:isScrollContainer="false"
                                   app:abbreviationsBarColor="@color/colorcalenderhedder"
                                   app:anotherMonthsDaysLabelsColor="#DAD7D7"
                                   app:daysLabelsColor="@android:color/background_dark"
                                   app:eventsEnabled="true"
                                   app:layout_constraintLeft_toLeftOf="parent"
                                   app:layout_constraintRight_toRightOf="parent"
                                   app:layout_constraintTop_toTopOf="parent"
                                   app:pagesColor="@color/colorbackground" />

                               <android.support.constraint.ConstraintLayout
                                   android:layout_marginBottom="20dp"
                                   android:layout_marginRight="30dp"
                                   android:layout_marginLeft="30dp"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

                                   <android.support.v7.widget.RecyclerView

                                       android:background="@drawable/event_card_background"
                                       android:id="@+id/recyclerView"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       app:layout_constraintBottom_toBottomOf="parent"
                                       app:layout_constraintLeft_toLeftOf="parent"
                                       app:layout_constraintRight_toRightOf="parent"
                                       app:layout_constraintTop_toTopOf="parent" />

                               </android.support.constraint.ConstraintLayout>
                           </LinearLayout>

                       </ScrollView>
                   </RelativeLayout>
               </RelativeLayout>
           </com.sothree.slidinguppanel.SlidingUpPanelLayout>
           </FrameLayout>
       </android.support.design.widget.CoordinatorLayout>
   </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:itemIconTint="@color/colorWhite"
        app:itemTextColor="@color/colorWhite"
        android:background="@drawable/navbackground"
        app:headerLayout="@layout/nav_header_event_details"
        app:menu="@menu/activity_event_details_drawer" />

</android.support.v4.widget.DrawerLayout>
</layout>